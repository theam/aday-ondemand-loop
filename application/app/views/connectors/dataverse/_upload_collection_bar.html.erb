<div class="card-header d-flex justify-content-between align-items-center bg-light">
  <div class="d-flex align-items-center flex-wrap gap-3">
    <div class="fs-5 text-primary">
      <i class="bi bi-plug-fill"></i>
    </div>

    <div class="mb-1"><%= connector_icon(collection.type) %></div>
    <!-- DATASET TITLE -->
    <div class="d-flex flex-column">
      <span><%= collection.connector_metadata.title %></span>
      <small class="text-muted"><%= collection.remote_repo_url %></small>
    </div>

  </div>

  <div class="d-flex align-items-center gap-3 flex-wrap">
    <!-- API Key Status: compact with icon -->
    <%= api_key_status_badge(collection) %>

    <button type="button"
            class="btn btn-sm btn-outline-primary"
            data-controller="modal"
            data-action="click->modal#load"
            data-modal-url-value="<%= edit_project_upload_collection_path(collection.project_id, collection.id) %>"
            data-modal-title-value="<%= t(".edit_dataset") %>"
            data-modal-id-value="global-modal">
      <i class="bi bi-pencil-fill"></i>
    </button>
  </div>
</div>